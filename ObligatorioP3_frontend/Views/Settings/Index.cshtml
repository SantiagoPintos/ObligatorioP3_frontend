@model ObligatorioP3_frontend.Models.SettingsModel
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Modificacion de Settings</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ModificarSettings">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" required/>
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Modificar settings" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-controller="Usuario" class="btn btn-danger" asp-action="Index">Volver atras</a>
</div>

@if (ViewBag.Mensaje != null)
{
    <div class="text-center alert-success p-3">
        @ViewBag.Mensaje
    </div>
}

@if (ViewBag.mensajeError != null)
{
    <div class="text-center alert-danger p-3">
        @ViewBag.MensajeError
    </div>
}