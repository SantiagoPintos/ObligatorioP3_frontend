@model ObligatorioP3_frontend.Models.MovimientoModel

@{
    ViewData["Title"] = "Registrar movimiento de stock";
}

<h1>Crear Movimiento</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="ArticuloId">Seleccione un articulo:</label>
                <br />
                <select id="ArticuloId" name="ArticuloId">
                    <option value="-1">Selecione...</option>
                    @if (ViewBag.articulos != null)
                    {
                        @foreach (var articulo in ViewBag.articulos)
                        {
                            <option value=@articulo.Id>@articulo.Nombre</option>
                        }
                    }
                </select>
            </div>      
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">                
                <input asp-for="Usuario" class="form-control" hidden />
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="tipoMovimientoId">Seleccione un tipo de movimiento:</label>
                <br />
                <select id="tipoMovimientoId" name="tipoMovimientoId">
                    <option value="-1">Selecione...</option>
                    @if (ViewBag.tipos != null)
                    {
                        @foreach (var tipo in ViewBag.tipos)
                        {
                            <option value=@tipo.Id>@tipo.Nombre</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear Movimiento" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Usuario" asp-action="Index">Volver atras</a>
</div>

@if (ViewBag.Mensaje != null)
{    
    <div class="text-center alert-success p-3">
        @ViewBag.Mensaje
    </div>
}

@if (ViewBag.mensajeError != null)
{
    <div class="text-center alert-danger p-3">
        @ViewBag.MensajeError
    </div>
}

